
<view class='style2'>
<view class="weui-panel">
  <view bindtap='gotoSetting' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <!-- 这里之后可以放图标 -->
    <view class="weui-cell__bd weui-cell_primary margin-left-icon">
      <view class='text-size-09 init-wordspace'>修改位置和身份信息</view>
    </view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
</view>
</view>
<view class="weui-panel">
  <view bindtap='logout' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    
    <view class="weui-cell__bd weui-cell_primary margin-left-icon">
      <view class='text-size-09 init-wordspace' bindtap='gotoReset'>修改密码</view>
    </view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
</view>
<view class="weui-panel">
  <view bindtap='logout' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    
    <view class="weui-cell__bd weui-cell_primary margin-left-icon">
      <view class='text-size-09 init-wordspace' bindtap='gotoBuyer'>查看余额</view>
    </view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
</view>

<button class='butt' bindtap='gotoLogin'>退出登录</button>
